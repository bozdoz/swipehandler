{
  "name": "swipehandler",
  "version": "0.1.0",
  "description": "A handler for swipe events",
  "main": "dist/swipe-handler.js",
  "module": "dist/swipe-handler.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run lint && tsc --noEmit",
    "lint": "eslint . --ext .ts --cache --fix",
    "build": "npm-run-all -p build:*",
    "build:cjs": "npm run build-common -- --outfile=./dist/swipe-handler.js --format=cjs",
    "build:esm": "npm run build-common -- --outfile=./dist/swipe-handler.mjs --format=esm",
    "build:example": "npm run build-common -- --outfile=./example/swipe-handler.js --format=esm",
    "build-common": "esbuild ./src/index.ts --bundle",
    "build:declarations": "npx tsc --emitDeclarationOnly 1> /dev/null || true",
    "format": "prettier --loglevel warn --write \"**/*.{js,css,md}\""
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "swipe",
    "gestures",
    "event",
    "touch",
    "mouse"
  ],
  "author": "@bozdoz",
  "license": "MIT",
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
